    <script>
        // Keep original design intact. JS only for completing functionality (menu, theme, populate sections).

        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });

        // Theme toggle (light/dark) — preserves design
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const body = document.body;

        function setTheme(isLight){
            if(isLight){
                body.classList.add('light-mode');
                themeIcon.className = 'fas fa-moon';
            } else {
                body.classList.remove('light-mode');
                themeIcon.className = 'fas fa-sun';
            }
            localStorage.setItem('lightMode', isLight ? '1' : '0');
        }

        // initialize
        const saved = localStorage.getItem('lightMode');
        setTheme(saved === '1');

        themeToggle.addEventListener('click', ()=>{
            setTheme(!body.classList.contains('light-mode'));
        });

        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', ()=>{
            if(window.scrollY > 20) navbar.classList.add('scrolled');
            else navbar.classList.remove('scrolled');
        });

        // Set current year
        document.getElementById('year').textContent = new Date().getFullYear();

        // Sample data to populate sections (you can replace these with your real content)
        const projects = [
            { title: 'Realtime Dashboard', desc: 'High-performance React dashboard with websockets and charting.', img: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=1200&h=600&fit=crop', tags:['React','Websockets','D3'], metrics: 'Used in production by 10k+ users', links: [{label:'Live',href:'#'},{label:'Repo',href:'#'}] },
            { title: 'Design System', desc: 'A scalable component library with theming and accessibility.', img: 'https://images.unsplash.com/photo-1547658719-da2b51169166?w=1200&h=600&fit=crop', tags:['TypeScript','Storybook','WCAG'], metrics: '60+ components', links: [{label:'Docs',href:'#'},{label:'Repo',href:'#'}] },
            { title: 'E-commerce PWA', desc: 'Fast, offline-capable storefront with payment integrations.', img: 'https://images.unsplash.com/photo-1593720213428-28a5b9e94613?w=1200&h=600&fit=crop', tags:['PWA','Next.js','Stripe'], metrics: '50% faster checkout', links: [{label:'Live',href:'#'},{label:'Case Study',href:'#'}] }
        ];

        const skills = [
            { icon: 'fab fa-react', title: 'Frontend Frameworks', items:['React','Next.js','Preact'] },
            { icon: 'fab fa-js-square', title: 'Languages & Tooling', items:['TypeScript','JavaScript','Babel','Webpack'] },
            { icon: 'fas fa-paint-brush', title: 'Design & UX', items:['Figma','Accessibility','Design Systems'] },
            { icon: 'fas fa-server', title: 'Infrastructure', items:['Vercel','Netlify','Docker'] }
        ];

        const videos = [
            { title: 'Building a Real-Time Chat Application', thumbnail: 'https://images.unsplash.com/photo-1611162617474-5b21e879e113?w=1200&h=600&fit=crop', duration: '24:15', views: '125K', url:'#' },
            { title: 'Advanced TypeScript Patterns', thumbnail: 'https://images.unsplash.com/photo-1555949963-aa79dcee981c?w=1200&h=600&fit=crop', duration: '18:42', views: '89K', url:'#' }
        ];

        const gallery = [
            { url: 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=1200&h=800&fit=crop', category: 'Workspace' },
            { url: 'https://images.unsplash.com/photo-1504639725590-34d0984388bd?w=1200&h=800&fit=crop', category: 'Design' },
            { url: 'https://images.unsplash.com/photo-1487058792275-0ad4aaf24ca7?w=1200&h=800&fit=crop', category: 'Conference' }
        ];

        const certs = [
            { title: 'Frontend Masters - Advanced React', issuer: 'Frontend Masters', year: '2023' },
            { title: 'Google - Web Performance', issuer: 'Google', year: '2022' }
        ];

        const posts = [
            { title: 'Optimizing React Rendering', date: '2024-11-10', excerpt: 'Techniques to reduce re-renders and improve FPS.' },
            { title: 'Design Systems at Scale', date: '2024-08-22', excerpt: 'How to maintain consistency across large apps.' }
        ];

        // Render helpers
        function el(tag, cls, html){ const d=document.createElement(tag); if(cls) d.className=cls; if(html) d.innerHTML=html; return d }

        function renderProjects(){
            const container = document.getElementById('projectsGrid');
            projects.forEach(p => {
                const card = el('div','project-card');
                card.innerHTML = `
                    <div class="project-image"><img src="${p.img}" alt="${p.title}"></div>
                    <div class="project-content">
                        <div class="project-title">${p.title}</div>
                        <div class="project-description">${p.desc}</div>
                        <div class="project-tags">${p.tags.map(t=>`<span class="tag">${t}</span>`).join('')}</div>
                        <div class="project-metrics"><p>${p.metrics}</p></div>
                        <div class="project-links">${p.links.map(l=>`<a href="${l.href}">${l.label}</a>`).join('')}</div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function renderSkills(){
            const container = document.getElementById('skillsGrid');
            skills.forEach(s=>{
                const card = el('div','skill-card');
                card.innerHTML = `
                    <div class="skill-header"><i class="${s.icon}"></i><div class="skill-title">${s.title}</div></div>
                    <div class="skill-items">${s.items.map(i=>`<span class="tag">${i}</span>`).join('')}</div>
                `;
                container.appendChild(card);
            });
        }

        function renderVideos(){
            const container = document.getElementById('videosGrid');
            videos.forEach(v=>{
                const card = el('div','video-card');
                card.innerHTML = `
                    <div class="video-thumbnail">
                        <img src="${v.thumbnail}" alt="${v.title}">
                        <div class="video-overlay"><div class="play-button"><div class="play-icon"></div></div></div>
                        <div class="video-duration">${v.duration}</div>
                    </div>
                    <div class="video-info">
                        <div class="video-title">${v.title}</div>
                        <div class="video-meta">${v.views} views</div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function renderGallery(){
            const container = document.getElementById('galleryGrid');
            gallery.forEach(g=>{
                const item = el('div','gallery-item');
                item.innerHTML = `
                    <img src="${g.url}" alt="${g.category}">
                    <div class="gallery-overlay"><div class="gallery-category">${g.category}</div></div>
                `;
                container.appendChild(item);
            });
        }

        function renderCerts(){
            const container = document.getElementById('certGrid');
            certs.forEach(c=>{
                const card = el('div','cert-card');
                card.innerHTML = `
                    <div class="cert-icon"><i class="fas fa-certificate"></i></div>
                    <div class="cert-info"><h3>${c.title}</h3><div class="cert-issuer">${c.issuer}</div><div class="cert-year">${c.year}</div></div>
                `;
                container.appendChild(card);
            });
        }

        function renderBlogs(){
            const container = document.getElementById('blogGrid');
            posts.forEach(p=>{
                const card = el('article','blog-card');
                card.innerHTML = `
                    <div class="blog-meta"><i class="fas fa-calendar-alt"></i> ${p.date}</div>
                    <div class="blog-title">${p.title}</div>
                    <div class="blog-excerpt">${p.excerpt}</div>
                    <a class="blog-link" href="#">Read more <i class="fas fa-arrow-right"></i></a>
                `;
                container.appendChild(card);
            });
        }

        // Initialize renders
        renderProjects();
        renderSkills();
        renderVideos();
        renderGallery();
        renderCerts();
        renderBlogs();

        // Contact form placeholder handling (no backend)
        const contactForm = document.getElementById('contactForm');
        contactForm.addEventListener('submit', (e)=>{
            e.preventDefault();
            const name = contactForm.name.value.trim();
            const email = contactForm.email.value.trim();
            const msg = contactForm.message.value.trim();
            if(!name || !email || !msg) return alert('Please complete the form.');
            // Simulate success
            alert('Thanks, ' + name + '! Your message has been sent. (Demo only)');
            contactForm.reset();
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(a=>{
            a.addEventListener('click', function(e){
                const href = this.getAttribute('href');
                if(!href || href === '#') return;
                const target = document.querySelector(href);
                if(target){
                    e.preventDefault();
                    target.scrollIntoView({behavior:'smooth', block:'start'});
                    // close mobile menu if open
                    if(navLinks.classList.contains('active')) navLinks.classList.remove('active');
                }
            });
        });

        // Highlight active nav link on scroll
        const sections = document.querySelectorAll('section');
        const navItems = document.querySelectorAll('.nav-link');
        function onScroll(){
            let idx = sections.length - 1;
            for(let i = 0; i < sections.length; i++){
                const rect = sections[i].getBoundingClientRect();
                if(rect.top <= 120) idx = i;
            }
            navItems.forEach(i=>i.classList.remove('active'));
            const id = sections[idx] && sections[idx].id ? sections[idx].id : 'home';
            const activeLink = document.querySelector('.nav-link[href="#'+id+'"]');
            if(activeLink) activeLink.classList.add('active');
        }
        onScroll();
        window.addEventListener('scroll', onScroll);

    </script>
</body>
</html>
